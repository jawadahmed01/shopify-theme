<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ 'favicon.ico' | asset_url }}">

    <title>{{ page_title }}</title>
    <link rel="icon" type="image/x-icon" href="{{ 'favicon.ico' | asset_url }}">
    {{ content_for_header }}
    {{ settings.heading_font | font_face: display: 'swap' }}
    {{ settings.body_font | font_face: display: 'swap' }}

    <style>
      :root {
        --heading-font: {{ settings.heading_font.family | default: 'Helvetica, Arial, sans-serif' }};
        --body-font: {{ settings.body_font.family | default: 'Helvetica, Arial, sans-serif' }};
        --primary-color: {{ settings.brand_primary | default: '#000000' }};
        --secondary-color: {{ settings.brand_secondary | default: '#ffffff' }};
        --accent-color: {{ settings.brand_accent | default: '#ff0000' }};
        --background-color: {{ settings.background_color | default: '#ffffff' }};
        --text-color: {{ settings.text_color | default: '#000000' }};
      }

      body {
        font-family: var(--body-font);
        background-color: var(--background-color);
        color: var(--text-color);
      }

      h1, h2, h3, h4, h5, h6 {
        font-family: var(--heading-font);
      }

      .button {
        background: var(--primary-color);
        color: var(--secondary-color);
      }

      .button:hover {
        background: var(--accent-color);
      }
    </style>

    <link rel="stylesheet" href="{{ 'style.css' | asset_url }}">
    <link rel="stylesheet" href="{{ './assets/style.css' | asset_url }}">
  </head>
  <body>
    {% sections 'header-group' %}
    {{ content_for_layout }}
    {% section 'footer' %}
  </body>
  <script>
    {
      {
        'script.js' | asset_url | script_tag;
      }
    }
  </script>
</html>
