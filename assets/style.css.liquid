* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

:root {
  --heading-font: {{ settings.heading_font.family | default: 'Helvetica, Arial, sans-serif' }};
  --body-font: {{ settings.body_font.family | default: 'Helvetica, Arial, sans-serif' }};
  --primary-color: {{ settings.brand_primary | default: '#000000' }};
  --secondary-color: {{ settings.brand_secondary | default: '#ffffff' }};
  --accent-color: {{ settings.brand_accent | default: '#ff0000' }};
  --background-color: {{ settings.background_color | default: '#ffffff' }};
  --text-color: {{ settings.text_color | default: '#000000' }};
}

/* Global styles */
body {
  font-family: var(--body-font);
  background-color: var(--background-color);
  color: var(--text-color);
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--heading-font);
}

.button {
  background: var(--primary-color);
  color: var(--secondary-color);
}

.button:hover {
  background: var(--accent-color);
}
.container {
  max-width: 1240px !important;
  margin: auto !important;
  padding: 40px 20px;
}
.product-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.product-images {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.main-image img {
  width: 100%;
  height: auto;
}

.thumbnail-list {
  display: flex;
  gap: 0.5rem;
  overflow-x: auto;
}

.thumbnail img {
  width: 80px;
  height: 80px;
  object-fit: cover;
  cursor: pointer;
}

.product-details {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.product-title {
  font-size: 2rem;
  margin: 0;
}

.product-vendor {
  color: #666;
  margin: 0;
}

.product-price {
  font-size: 1.5rem;
}

.compare-price {
  text-decoration: line-through;
  color: #999;
  margin-left: 1rem;
}

.product-description {
  line-height: 1.6;
}

.variant-selector select {
  width: 100%;
  padding: 0.5rem;
}

.quantity-input {
  width: 80px;
  padding: 0.5rem;
  margin-right: 1rem;
}

.add-to-cart-button {
  background-color: #000;
  color: #fff;
  padding: 1rem 2rem;
  border: none;
  cursor: pointer;
}

.add-to-cart-button:hover {
  background-color: #333;
}

.product-tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.tag {
  background-color: #f0f0f0;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
}

@media (max-width: 768px) {
  .product-container {
    grid-template-columns: 1fr;
  }
}
.cart-page {
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.cart-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 2rem;
}

.cart-table th,
.cart-table td {
  padding: 1rem;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

.cart-item-info {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.cart-item-info img {
  max-width: 100px;
  height: auto;
}

.quantity-input {
  width: 60px;
  padding: 0.5rem;
  border: 1px solid #ddd;
}

.remove-btn {
  color: #ff0000;
  text-decoration: none;
  font-size: 1.5rem;
  font-weight: bold;
}

.cart-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 0;
}

.cart-subtotal {
  font-size: 1.2rem;
  font-weight: bold;
}

.cart-buttons {
  display: flex;
  gap: 1rem;
}

.update-btn,
.checkout-btn {
  padding: 0.8rem 1.5rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-weight: bold;
}

.update-btn {
  background-color: #f0f0f0;
  color: #333;
}

.checkout-btn {
  background-color: #000;
  color: white;
}

.empty-cart {
  text-align: center;
  padding: 4rem 2rem;
}

.continue-shopping {
  display: inline-block;
  margin-top: 1rem;
  padding: 0.8rem 1.5rem;
  background-color: #000;
  color: white;
  text-decoration: none;
  border-radius: 4px;
}
header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 30px;
  background: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.header__logo img {
  max-height: 50px;
  width: auto;
}

.header__logo-text {
  font-size: 24px;
  font-weight: bold;
  text-decoration: none;
  color: #000;
}

.header__menu {
  flex: 1;
  text-align: center;
}

.menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  gap: 30px;
}

.menu-list a {
  text-decoration: none;
  color: #333;
  font-size: 16px;
  transition: color 0.3s ease;
}

.menu-list a:hover {
  color: #666;
}

.header__icons {
  display: flex;
  gap: 20px;
  align-items: center;
}

.header__icons a {
  color: #333;
  text-decoration: none;
}

.cart-count {
  background: #000;
  color: #fff;
  border-radius: 50%;
  padding: 2px 6px;
  font-size: 12px;
}

.header__mobile-toggle {
  display: none;
}

.mobile-toggle {
  background: none;
  border: none;
  padding: 10px;
  cursor: pointer;
}

.mobile-toggle span {
  display: block;
  width: 25px;
  height: 2px;
  background: #333;
  margin: 5px 0;
  transition: 0.3s;
}

@media screen and (max-width: 768px) {
  .header__mobile-toggle {
    display: block;
  }

  .header__menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 80%;
    height: 100vh;
    background: #fff;
    padding: 50px 20px;
    transition: 0.3s;
  }

  .header__menu.active {
    left: 0;
  }

  .menu-list {
    flex-direction: column;
    gap: 20px;
  }

  .header__icons {
    gap: 15px;
  }
}
