<header>
  <div class="header__mobile-toggle">
    <button class="mobile-toggle" aria-label="Menu Toggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <div class="header__logo">
    {%- if section.settings.logo != blank -%}
      <a href="/">
        <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ shop.name }}">
      </a>
    {%- else -%}
      <a href="/" class="header__logo-text">{{ shop.name }}</a>
    {%- endif -%}
  </div>

  <nav class="header__menu">
    <ul class="menu-list">
      {% for link in linklists['main-menu'].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>

  <div class="header__icons">
    <a href="/search" class="icon-search">
      {% render 'icon-search' %}
    </a>
    <a href="/account" class="icon-account">
      {% render 'icon-account' %}
    </a>
    <a href="/cart" class="icon-cart">
      {% render 'icon-cart' %}
      <span class="cart-count">{{ cart.item_count }}</span>
    </a>
  </div>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 30px;
    background: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .header__logo img {
    max-height: 50px;
    width: auto;
  }

  .header__logo-text {
    font-size: 24px;
    font-weight: bold;
    text-decoration: none;
    color: #000;
  }

  .header__menu {
    flex: 1;
    text-align: center;
  }

  .menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 30px;
  }

  .menu-list a {
    text-decoration: none;
    color: #333;
    font-size: 16px;
    transition: color 0.3s ease;
  }

  .menu-list a:hover {
    color: #666;
  }

  .header__icons {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .header__icons a {
    color: #333;
    text-decoration: none;
  }

  .cart-count {
    background: #000;
    color: #fff;
    border-radius: 50%;
    padding: 2px 6px;
    font-size: 12px;
  }

  .header__mobile-toggle {
    display: none;
  }

  .mobile-toggle {
    background: none;
    border: none;
    padding: 10px;
    cursor: pointer;
  }

  .mobile-toggle span {
    display: block;
    width: 25px;
    height: 2px;
    background: #333;
    margin: 5px 0;
    transition: 0.3s;
  }

  @media screen and (max-width: 768px) {
    .header__mobile-toggle {
      display: block;
    }

    .header__menu {
      position: fixed;
      top: 0;
      left: -100%;
      width: 80%;
      height: 100vh;
      background: #fff;
      padding: 50px 20px;
      transition: 0.3s;
    }

    .header__menu.active {
      left: 0;
    }

    .menu-list {
      flex-direction: column;
      gap: 20px;
    }

    .header__icons {
      gap: 15px;
    }
  }
</style>

<script>
  document.querySelector('.mobile-toggle').addEventListener('click', function() {
    document.querySelector('.header__menu').classList.toggle('active');
  });

  {% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}