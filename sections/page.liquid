<style>
  .about-section {
      padding: 80px 0;
      max-width: 1200px;
      margin: 0 auto;
  }

  .about-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      align-items: center;
      padding: 0 20px;
  }

  .about-content {
      text-align: left;
  }

  .about-image {
      width: 100%;
      height: auto;
      border-radius: 8px;
  }

  .about-title {
      font-size: 2.5em;
      margin-bottom: 20px;
      color: {{ settings.heading_color }};
  }

  .about-text {
      font-size: 1.1em;
      line-height: 1.6;
      color: {{ settings.text_color }};
  }

  @media screen and (max-width: 768px) {
      .about-container {
          grid-template-columns: 1fr;
      }
  }
</style>

<div class="about-section">
  <div class="about-container">
    <div class="about-content">
      <h1 class="about-title">{{ section.settings.title }}</h1>
      <div class="about-text">{{ section.settings.content }}</div>
    </div>
    <div class="about-image-container">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | img_url: 'master' }}"
          alt="{{ section.settings.image.alt | escape }}"
          class="about-image"
          loading="lazy"
        >
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Our Story"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Share your brand's story or mission here. Connect with your customers by letting them know who you are and what you stand for.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Us",
      "category": "Content"
    }
  ]
}
{% endschema %}
