<style>
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  .collection-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .collection-card:hover {
    transform: translateY(-5px);
  }

  .collection-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .collection-info {
    padding: 15px;
    text-align: center;
  }

  .collection-title {
    margin: 0;
    font-size: 1.2em;
    color: #333;
  }

  .collection-description {
    color: #666;
    margin-top: 10px;
    font-size: 0.9em;
  }
</style>

<div class="collection-card">
  <img src="{{ collection.image.src | img_url: '450x450', crop: 'center' }}" alt="{{ collection.title }}">
  <div class="collection-info">
    <h2>{{ collection.title }}</h2>
    <p>{{ collection.description | truncate: 100 }}</p>
  </div>
</div>

{% if collections.size == 0 %}
  <div class="empty-state">
    <p>No collections found</p>
  </div>
{% endif %}
